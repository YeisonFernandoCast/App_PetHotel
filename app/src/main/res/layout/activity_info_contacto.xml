<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".InfoContacto">

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="@string/buscar_cuidador"
        android:textColor="#000000"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <ImageView
        android:id="@+id/iv_inicio"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="home"
        android:src="@mipmap/ic_launcher_round"
        app:srcCompat="@drawable/home_circle" />

    <ImageView
        android:id="@+id/iv_out"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="out"
        android:src="@mipmap/ic_launcher_round"
        app:srcCompat="@drawable/close_circle_outline" />


    <TextView
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="@string/ubicaci_n"
        android:textColor="#A50909" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_buscar"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Buscar en:">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>