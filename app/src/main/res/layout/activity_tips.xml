<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TipsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:elevation="1dp"
            android:fitsSystemWindows="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/iv_logo_tips"
        android:layout_width="152dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:contentDescription="@string/register_logo_descriptionApp"
        android:src="@drawable/ic_pet_hotel_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tittle_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/tips_pets"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1_tip"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:text="@string/tip__name_one"
        android:background="@color/design_default_color_background"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/margin_16"
        android:textAlignment="viewStart"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2_tip"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:text="@string/tip_name_two"
        android:background="@color/design_default_color_background"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/margin_16"
        android:textAlignment="viewStart"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3_tip"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:text="@string/tip_name_three"
        android:background="@color/design_default_color_background"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/margin_16"
        android:textAlignment="viewStart"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4_tip"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:text="@string/tip_name_four"
        android:background="@color/design_default_color_background"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/margin_16"
        android:textAlignment="viewStart"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5_tip"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:text="@string/tip_name_five"
        android:background="@color/design_default_color_background"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/margin_16"
        android:textAlignment="viewStart"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_tips"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin_tips"
        android:contentDescription="@string/register_logo_descriptionApp"
        android:src="@mipmap/perro_gato"/>
</LinearLayout>