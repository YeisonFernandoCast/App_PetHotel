<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/window_paddingRegister"
    tools:context=".RegisterActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoRegister"
        android:contentDescription="@string/logo_descriptionApp"
        android:layout_width="@dimen/logo_register"
        android:layout_height="@dimen/logo_register"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8"
        android:src="@mipmap/logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tittle_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sing_up_register"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textSize="48sp"
        android:layout_marginBottom="@dimen/margin_32"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_register"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:background="@color/white"
        android:textColor="@color/red"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_launch_register_garden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_up_garden"
        android:background="@color/white"
        android:textColor="@color/red"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_120"
        android:text="@string/login"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textStyle="italic"
        android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>