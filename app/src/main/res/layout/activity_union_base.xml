<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.union_base_activity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_description"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/union_login"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_50"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/red_dark"
        android:text="@string/register_login"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/margin_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/union_register"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/union_register"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_50"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/red_dark"
        android:text="@string/register_text_registro"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/margin_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/red" />


</androidx.constraintlayout.widget.ConstraintLayout>